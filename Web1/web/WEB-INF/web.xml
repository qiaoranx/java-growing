<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.company.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.company.controller.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PageQueryServlet</servlet-name>
        <servlet-class>com.company.controller.PageQueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageQueryServlet</servlet-name>
        <url-pattern>/pageQuery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/login.html</welcome-file>
    </welcome-file-list>

</web-app>