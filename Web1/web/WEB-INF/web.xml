<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.company.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.company.controller.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PageQueryServlet</servlet-name>
        <servlet-class>com.company.controller.PageQueryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoUpdateServlet</servlet-name>
        <servlet-class>com.company.controller.GoUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserServlet</servlet-name>
        <servlet-class>com.company.controller.UpdateUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.company.controller.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>com.company.controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.company.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvSaveServlet</servlet-name>
        <servlet-class>com.company.controller.InvSaveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QueryInvServlet</servlet-name>
        <servlet-class>com.company.controller.QueryInvServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoInvDetailServlet</servlet-name>
        <servlet-class>com.company.controller.GoInvDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoInvDetailServlet</servlet-name>
        <url-pattern>/goInvDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QueryInvServlet</servlet-name>
        <url-pattern>/queryInv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvSaveServlet</servlet-name>
        <url-pattern>/invsave</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserServlet</servlet-name>
        <url-pattern>/updateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoUpdateServlet</servlet-name>
        <url-pattern>/goUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageQueryServlet</servlet-name>
        <url-pattern>/pageQuery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>encodeFilter</filter-name>
        <filter-class>com.company.filter.EncodeFilter</filter-class>
    </filter>
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.company.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
<!--filter-mapping 顺序决定了filter的优先级-->
   <filter-mapping>
       <filter-name>encodeFilter</filter-name>
       <url-pattern>/*</url-pattern>
   </filter-mapping>
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>

</web-app>